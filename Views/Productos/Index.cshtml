@model IEnumerable<Drippin.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.proNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proPrecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proImagen2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proImagen3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.proImagen4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prodCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.proNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proPrecio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proImagen2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proImagen3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.proImagen4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prodCreacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.proId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.proId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.proId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
